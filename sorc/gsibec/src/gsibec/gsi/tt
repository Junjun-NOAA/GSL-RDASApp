> >       enddo
> >       do i=1,nsig+1
> >         g_prsi(:,:,i)=g_prsi(:,:,i)+eta2_ll(i)*ges_ps_inc
> >       enddo
> >       do i=1,nsig
> >         ges_delp(:,:,i)=g_prsi(:,:,i)-g_prsi(:,:,i+1)
> >       enddo
> >       ges_delp=ges_delp*1000.0_r_kind
> >       deallocate(g_prsi,ges_ps_inc)
> >     
> >     else
> >       allocate(ges_ps_write(lat2,lon2))
> >       ges_ps_write=ges_ps*1000.0_r_kind
