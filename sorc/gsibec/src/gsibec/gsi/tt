> > !$$$ end documentation block
> > implicit none
> > 
> > REAL(r_kind), INTENT(IN   ) :: a(:,:) 
> > REAL(r_kind), INTENT(INOUT) :: b(:,:) 
> > 
> > INTEGER(i_kind) :: m,j, jm, jp, i
> > REAL(r_kind) :: s, bjji
