> > REAL(r_kind),           INTENT(  OUT) :: d(m) 
> > 
> > REAL(r_kind), DIMENSION(m,-mah:mah  ) :: at
> > REAL(r_kind), DIMENSION(m,-mah:0)     :: bt
> > REAL(r_kind), DIMENSION(m)            :: dt
