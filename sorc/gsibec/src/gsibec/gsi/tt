> > implicit none
> > 
> > INTEGER(i_kind),  INTENT(IN   ) :: mx, mah1, mah2, my
> > REAL(r_kind),     INTENT(IN   ) :: a(mx,-mah1:mah2)
> > REAL(r_kind),     INTENT(INOUT) :: v(mx,my)
> > 
