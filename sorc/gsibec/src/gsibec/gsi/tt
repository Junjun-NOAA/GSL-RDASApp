> > !
> > !   input argument list:
> > !     a(3), b(3)       - input vectors
> > !
> > !   output argument list:
> > !     c(3)             - resulting cross-product
> > !
> > ! attributes:
> > !   language:  f90
> > !   machine:   ibm RS/6000 SP
> > !
> > !$$$ end documentation block
> > implicit none
> > 
> > REAL(r_kind), INTENT(IN   ) :: a(3), b(3)
> > REAL(r_kind), INTENT(  OUT) :: c(3)
> > 
> > c(1)=a(2)*b(3)-a(3)*b(2)
> > c(2)=a(3)*b(1)-a(1)*b(3)
> > c(3)=a(1)*b(2)-a(2)*b(1)
> > END SUBROUTINE dcro33
