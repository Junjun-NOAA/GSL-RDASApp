> > INTEGER(i_kind),  INTENT(IN   ) :: ipiv(:) 
> > REAL(r_kind)   ,  INTENT(IN   ) :: a(:,:) 
> > REAL(r_kind)   ,  INTENT(INOUT) :: b(:) 
