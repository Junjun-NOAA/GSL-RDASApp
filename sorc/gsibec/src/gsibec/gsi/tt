> > REAL(r_kind),    INTENT(IN   ) :: a(0:)
> > REAL(r_kind),    INTENT(  OUT) :: b(0:)
> > 
> > REAL(r_kind),DIMENSION(0:SIZE(a)-1):: t; INTEGER(i_kind) :: k
