> > m=SIZE(a,1)
> > DO j=1,m
> >    jm=j-1
> >    jp=j+1
> >    s = a(j,j) - SUM(b(j,1:jm)*b(j,1:jm))
> >    IF(s <= zero)THEN
> >       PRINT '(" L1LM detects non-positivity at diagonal index",i2)',J
> >       STOP
