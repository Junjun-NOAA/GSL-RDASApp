> >       endif
> > 
> >     else
> >       call gsi_fv3ncdf_write_v1(grd_fv3lam_dynvar_ionouv,gsibundle_fv3lam_dynvar_nouv,& 
> >                                 add_saved,fv3filenamegin%dynvars,fv3filenamegin)
