> <   allocate(coeffx(nlat,nlon),coeffy(nlat,nlon))
> <   dyy=rearth*adlat*deg2rad
> <   dyyi=one/dyy
> <   dyyh=half/dyy
> <   do j=1,nlon
> <      do i=1,nlat
> <         region_dy(i,j)=dyy
> <         region_dyi(i,j)=dyyi
> <         coeffy(i,j)=dyyh
> <      enddo
> <   enddo
> < 
> <   do i=1,nlat
> <      dxx=rearth*cos(rlat_in(i,1)*deg2rad)*adlon*deg2rad
> <      dxxi=one/dxx
> <      dxxh=half/dxx
> <      do j=1,nlon
> <         region_dx(i,j)=dxx
> <         region_dxi(i,j)=dxxi
> <         coeffx(i,j)=dxxh
> <      enddo
> <   enddo
> < 
> < !
> < !----------  setup  region_lat,region_lon in earth coord
> < !
