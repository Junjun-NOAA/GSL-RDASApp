> >    a(j,jleast-j:jmost-j) = ajji * a(j,jleast-j:jmost-j)
> >    DO i=jp,imost
> >       aij=a(i,j-i)
> >       a(i,jp-i:jmost-i) = a(i,jp-i:jmost-i) - aij*a(j,jp-j:jmost-j)
> >    ENDDO
> >    a(j,0)=one
> >    b(j,-mbh1:mbh2) = ajji * b(j,-mbh1:mbh2)
> > ENDDO
> > END SUBROUTINE dl1ueb
