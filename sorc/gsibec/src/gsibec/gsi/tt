> > DO j=-mah1,mah2
> >    DO i=MAX(1,1-j),MIN(m1,m2-j); v2(:,i)=v2(:,i)-a(i,j)*v1(:,i+j); ENDDO
> > ENDDO
> > END SUBROUTINE mulby
