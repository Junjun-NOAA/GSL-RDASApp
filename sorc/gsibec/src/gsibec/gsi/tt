> <        call reverse_grid_r(grid_lon,nx+1,ny+1,1)
> <        call reverse_grid_r(grid_lat,nx+1,ny+1,1)
> <     endif
> < 
> <     iret=nf90_close(gfile_loc)
> < 
> <     iret=nf90_open(ak_bk,nf90_nowrite,gfile_loc)
